{% extends 'base.html.twig' %}
{% block title %}
    Animals list
{% endblock %}
{% block content %}
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
            </tr>
        </thead>
        <tbody>
            {% for animal in animals %}
                <tr>
                    <th scope="row">{{ animal.id }}</th>
                    <td>
                        <a href="{{ path('animal_details', { 'animal': animal.id }) }}">
                            {{ animal.name }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}