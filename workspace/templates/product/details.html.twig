{% extends 'base.html.twig' %}
{% block title %}
    Product - {{ product.name }}
{% endblock %}
{% block content %}
    <div class="d-flex flex-column gap-1">
        <span class="mb-3">
            <a class="btn btn-primary" href="{{ path('product_list') }}">
                Go back to list
            </a>
        </span>
        <div class="d-flex flex-row gap-2">
            <div class="fw-bold">
                #
            </div>
            <div>
                {{ product.id }}
            </div>
        </div>
        <div class="d-flex flex-row gap-2">
            <div class="fw-bold">
                Name
            </div>
            <div>
                {{ product.name }}
            </div>
        </div>
    </div>
{% endblock %}